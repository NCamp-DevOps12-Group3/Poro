<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MessageDao">
    <insert id="sendMessage" parameterType="map">
        insert into message(sender_id,receiver_id,message_content)
        values (#{senderid},#{receiverid},#{messagecontent})
    </insert>
    <select id="getMessages" parameterType="int" resultType="message">
        select sender_id,receiver_id,message_content
        from message
        where receiver_id = #{userId}
    </select>
</mapper>